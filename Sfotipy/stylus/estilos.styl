@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
a 
	text-decoration none
body
	font-size 16px
figure
	margin 0
img 
	vertical-align top	
//buttons			
.button-menu
	color gris_oscuro
	left .5em
	margin -10px 10px
	position absolute
	top 50%
//utilitarios
.relative
	position relative
		
.center-block
	margin 0 auto
.center-text
	text-align center	
.border-bottom
	border-bottom 1px solid #E6E6E6	
.container
	padding 1.4rem
	font-size 0	
	text-align center
.name
	color gris_oscuro
.menu
	display none
.header
	heigh 3.5em
		
	.title
		font-size 1.1em	
		text-align center
		margin 0
		line-height 3.5em
.action
	margin-right .5em
	color white
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro	
	
			
.actions
	position absolute
	background rgba(black,.3)
	left 0
	right 0
	bottom 0
	text-align right
	
.author
	color gris_claro	
	
.padding
	padding 1em
.playing
	&.small
		width 20em
.play 
	a 
		margin-right 1.5em		
.padding-tb
	padding 1em 0		
.progress
	margin 1em 0
	position relative
	
	.min 
	.max
		position absolute
		font-size .8em 
		top -6px
	.min
		left 0
	.max
		right 0	
				
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background	rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%	
		height 10px
		position absolute
		right 0
		width 10px
		top -2px
						
.song
	width 128px
	display inline-block
	font-size 1rem
	margin 0 1em 1em 0
	text-align left
	&:nth-child(even)
		margin-right 0
	p 	
		margin .5em 0

						
	