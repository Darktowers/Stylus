@import "normalize.styl"
@import "fonts.styl"
gris_oscuro = #333333
gris_claro = #818181
a 
	text-decoration none
body
	font-size 16px
figure
	margin 0
//buttons			
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//utilitarios
.relative
	position relative	
.border-bottom
	border-bottom 1px solid #E6E6E6	
.container
	padding 1.4rem
	font-size 0	
	text-align center
.name
	color gris_oscuro
.menu
	display none
.header
	heigh 3.5em
		
	.title
		font-size 1.1em	
		text-align center
		margin 0
		line-height 3.5em
.autor
	color gris_claro		
.song
	width 128px
	display inline-block
	font-size 1rem
	margin 0 1em 1em 0
	text-align left
	&:nth-child(even)
		margin-right 0
	p 	
		margin .5em 0

.playing
	&.small
		width 20em
						
	